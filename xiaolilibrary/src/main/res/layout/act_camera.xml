<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.xiaoli.library.camera.CameraPreview
        android:id="@+id/mCameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/mIvPhotograph"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/camera_btn_photograph"
        android:onClick="doPhotograph"
        />

    <com.xiaoli.library.camera.FocusView
        android:id="@+id/mFocusView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
