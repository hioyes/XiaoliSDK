<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="301dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTvUpdateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/auction_rules_img"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="软件更新提示"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/mTvUpdateMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mTvUpdateTitle"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="3dp"
            android:textSize="14dp" />

        <View
            android:id="@+id/mViewUpdateLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/mTvUpdateMsg"
            android:layout_marginTop="15dp"
            android:background="@color/line" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mBtnUpdateCancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_line"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="退出应用"
                android:textColor="#595959"
                android:textSize="16dp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#D9D9D9" />

            <Button
                android:id="@+id/mBtnUpdateOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radios_button_background"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@android:color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>